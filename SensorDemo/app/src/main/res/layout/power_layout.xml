    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读功率："/>
        <TextView
            android:id="@+id/read_min_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/read_power_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="120dp" />
        <TextView
            android:id="@+id/read_max_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max"/>
        <EditText
            android:id="@+id/read_power_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:text="30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dBm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写功率："/>
        <TextView
            android:id="@+id/write_min_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/write_power_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="120dp" />
        <TextView
            android:id="@+id/write_max_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max"/>
        <EditText
            android:id="@+id/write_power_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:text="30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dBm"/>
    </LinearLayout>

</LinearLayout>